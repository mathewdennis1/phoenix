{
    "jshint.options": {
        "plusplus": true,
        "devel": true,
        "nomen": true,
        "indent": 4,
        "maxerr": 50,
        "es5": true
    },
    "defaultExtension": "js",
    "language": {
        "javascript": {
            "linting.prefer": ["ESLint", "JSHint"],
            "linting.usePreferredOnly": true
        }
    },
    "path": {
        "src/thirdparty/CodeMirror/**/*.js": {
            "spaceUnits": 2,
            "linting.enabled": false
        },
        "src/thirdparty/globmatch.js": {
            "spaceUnits": 2,
            "linting.enabled": false
        }
    },
    "spaceUnits": 4,
    "useTabChar": false
}
